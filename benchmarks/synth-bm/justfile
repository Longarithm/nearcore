neard := "../../target/release/neard"
near_localnet_home := ".near/"
rpc_url := "http://127.0.0.1:3030"

init_localnet:
    ./{{neard}} --home {{near_localnet_home}} init --chain-id localnet

run_localnet:
    ./{{neard}} --home {{near_localnet_home}} run

create_sub_accounts:
    RUST_LOG=info \
    cargo run --release -- create-sub-accounts \
        --rpc-url {{rpc_url}} \
        --signer-key-path {{near_localnet_home}}/validator_key.json \
        --nonce 1 \
        --sub-account-prefix 'a' \
        --num-sub-accounts 100 \
        --deposit 953060601875000000010000 \
        --channel-buffer-size 1200 \
        --requests-per-second 1250 \
        --user-data-dir user-data

benchmark_native_transfers:
    RUST_LOG=info \
    cargo run --release -- benchmark-native-transfers \
        --rpc-url {{rpc_url}} \
        --user-data-dir user-data/ \
        --read-nonces-from-network \
        --num-transfers 200 \
        --channel-buffer-size 30000 \
        --requests-per-second 2000 \
        --amount 1 \
        --transaction-statistics-service

benchmark_mpc_sign:
    RUST_LOG=info \
    cargo run --release -- benchmark-mpc-sign \
        --rpc-url {{rpc_url}} \
        --user-data-dir user-data/ \
        --read-nonces-from-network \
        --num-transactions 500 \
        --requests-per-second 100 \
        --receiver-id 'v1.signer-dev.testnet' \
        --key-version 0 \
        --channel-buffer-size 500 \
        --gas 300000000000000 \
        --deposit 100000000000000000000000

create_sweat_oracles:
    RUST_LOG=info \
    cargo run --release -- benchmark-sweat create-oracles \
        --rpc-url {{rpc_url}} \
        --num-oracles 4 \
        --oracle-deposit 100000000000000000000000 \
        --sweat-contract-id sweat.near \
        --user-data-dir oracles/

create_sweat_users:
    RUST_LOG=info \
    cargo run --release -- benchmark-sweat create-users \
        --rpc-url {{rpc_url}} \
        --sweat-contract-id sweat.near \
        --oracle-data-dir oracles/ \
        --users-per-oracle 1000 \
        --user-data-dir users/

run_sweat_benchmark:
    RUST_LOG=info \
    cargo run --release -- benchmark-sweat run-benchmark \
        --rpc-url {{rpc_url}} \
        --sweat-contract-id sweat.near \
        --oracle-data-dir oracles/ \
        --user-data-dir users/ \
        --batch-size 750 \
        --requests-per-second 10 \
        --total-batches 1000

